<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@color/bg_menu"
        >

    <TextView
            android:id="@+id/ope_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/result"
            android:textSize="8pt"
            android:textColor="@color/textColor"
            android:gravity="right|center_vertical"
            android:drawableLeft="@drawable/ope_add"
            />

    <TextView
            android:id="@+id/ope_sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/result"
            android:textSize="8pt"
            android:textColor="@color/textColor"
            android:gravity="right|center_vertical"
            android:drawableLeft="@drawable/ope_sub"
            />

    <TextView
            android:id="@+id/ope_mul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/result"
            android:textSize="8pt"
            android:textColor="@color/textColor"
            android:gravity="right|center_vertical"
            android:drawableLeft="@drawable/ope_mul"
            />

    <TextView
            android:id="@+id/ope_div"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/result"
            android:textColor="@color/textColor"
            android:textSize="8pt"
            android:gravity="right|center_vertical"
            android:drawableLeft="@drawable/ope_div"
            />

    <TextView
            android:id="@+id/func_pow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/result"
            android:textColor="@color/textColor"
            android:textSize="8pt"
            android:gravity="right|center_vertical"
            android:drawableLeft="@drawable/func_pow"
            />
</LinearLayout>